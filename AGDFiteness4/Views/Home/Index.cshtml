@{
    Layout = null;
}

<style>
    #myCarousel {
        width: 100%;
    }

    .carousel-control {
        margin-top: 20px;
    }

    .carousel-inner .item {
        width: 100%;
        height: 100vh;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
    }

    .ad1 {
        background: url(/Content/Images/LandingPage/gymCropped.jpg) no-repeat center center fixed;
    }

    .ad2 {
        background: url(/Content/Images/LandingPage/yogaCropped.jpg) no-repeat center center fixed;
    }

    .ad3 {
        background: url(/Content/Images/LandingPage/basketballCropped.jpg) no-repeat center center fixed;
    }

    .ad4 {
        background: url(/Content/Images/LandingPage/tennisCropped.jpg) no-repeat center center fixed;
    }

    .ad5 {
        background: url(/Content/Images/LandingPage/footBallcropped.jpg) no-repeat center center fixed;
    }

    #LandingText {
        position: fixed;
        left: 50%;
        top: 40%;
        z-index: 100;
        color: white;
        text-align: center;
        font-size: 3rem;
        width: 600px;
        margin-left: -300px;
        background-color: rgba(100, 100, 100, 0.50);
        border-radius: 10px;
        margin-bottom: 0px;
    }

    #Title {
        margin: 10px 0px 0px 0px
    }

    #Enter, a {
        color: white;
        margin: 0px 0px 10px 0px;
        text-decoration: none;
    }

    #Enter, a:hover {
        color:grey;
    }
</style>
</head>

<body>
    <div id="LandingText">
        <h3 id="Title">AGD Fitness Supplies</h3>
        <h5 id="Enter">@Html.ActionLink("Enter", "CustomerList", "Customer")</h5>
    </div>

    <div id="myCarousel" class="carousel slide">

        <!-- Carousel items -->
        <div class="carousel-inner">

            <div class="item active ad1">
            </div>

            <div class="item ad2">
            </div>

            <div class="item ad3">
            </div>

            <div class="item ad4">
            </div>


            <div class="item ad5">

            </div>
        </div>
    </div>

</body>