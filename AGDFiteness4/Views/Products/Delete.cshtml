@model AGDFiteness4.Models.Product

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>




@*@{
        Layout = null;
    }*@

@{
    ViewBag.Title = "Delete Confirm Page";
}

<style>
    body {
        font-family: Roboto;
    }

    #AdminHeader {
        margin-top: 10px;
        height: 50px;
        display: block;
        background-color: white;
        position: relative;
        border: 1px solid black;
        border-radius: 10px 10px 0px 0px;
    }

    table {
        margin-top: 0px;
    }

    .thead {
        background-color: black;
        color: white;
        text-align: center;
    }
</style>

<div id="AdminHeader" style="   ">
    <span style="margin-top:0px;position:absolute;top:9px;left:5px;" class="btn btn-default">
        @Html.ActionLink("Back To Admin Page", "Index")
    </span>
    <h2 class="text-center" style="margin-top:0px;padding-top:8px;">Are you sure you want to delete this product? </h2>
</div>

<div>
    <Table id="myTable" class="table table-striped" @*border="1"*@ width="100%">
        <thead class="thead">
            <tr>
                <td>Category</td>
                <td>Name</td>
                <td>Product Image</td>
                <td>Price</td>
                <td>In Stock</td>
                <td>Admin Features</td>
            </tr>
        <thead>
        <tbody>

            <tr>

                <td class="text-center">
                    <img src="~/Content/Images/@(String.Format("{0}{1}", @Model.CategoryTBL.CategoryName,"_.jpg"))" width="50" style=" display: block; margin-left: auto; margin-right: auto;" />
                    <p>@Model.CategoryTBL.CategoryName</p>
                </td>

                <td class="text-center">
                    @Model.ProductName

                <td class="text-center">
                    <img src="~/Content/Images/ProductImages/@Model.Image" width="100" style=" display: block; margin-left: auto; margin-right: auto;" />
                </td>



                <td class="text-center">
                    <span>@String.Format("{0:C}", @Model.ProductPrice)</span>
                </td>

                <td class="text-center">
                    <span>@String.Format("{0:C}", @Model.Instock)</span>
                </td>

                <td class="text-center">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        @*<div class="form-actions no-color">*@
                        <input type="submit" value="Confirm Delete" class="btn btn-default" />

                        @*</div>*@
                    }
                </td>

            </tr>



        </tbody>
    </Table>

</div>