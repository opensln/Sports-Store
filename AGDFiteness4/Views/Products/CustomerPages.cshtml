@model IEnumerable<AGDFiteness4.Models.Product>

@{
    ViewBag.Title = "CustomerView";
}

<h2>CustomerView</h2>


<style>
    body {
        font-family: Roboto;
    }

    .body-content {
        margin-top: -10px;
    }

    #productCard {
        box-shadow: 0px 5px 5px lightgrey;
    }

    #ImageWindow {
        border-radius: 5%;
    }

    .zoom {
        transition: transform .2s; /* Animation */
        /*width: 200px;
        height: 200px;
        margin: 0 auto;*/
    }

        .zoom:hover {
            -webkit-transform: scale(1.3);
            -ms-transform: scale(1.3);
            transform: scale(1.3);
        }
</style>

@*<h2>CustomerView</h2>*@
<header class="text-center" ; style="background-color:#000000;height:100px; margin-top:10px;color:white;border-radius:10px 10px 10px 10px">
    <h1 style="line-height:80px;font-size:50px;">AGD FITNESS SUPPLIES</h1>
    <h4 style="margin-top:-20px;font-size:20px;">"All your essential fitness products at today's best prices"</h4>
</header>

<div class="Row">
    <div class="col-md-3" style="height:auto; padding:10px;">
        <aside class="well text-center">
            @*@Html.Action("CatMenu", "Nav")*@
        </aside>
    </div>

    <section class="col-md-9">

        @foreach (var thing in Model)
        {
            <div class="col-md-4" style="height:auto; padding:10px; background-color:#ffffff;">
                <div id="productCard" class="text-center" style="height:auto; position:relative;background-color:white;padding:0px;">

                    <div id="productCardTop" class="" style="height:140px;background-color:#f5f5f5;padding: 20px 0px 0px 0px; ">

                        <span id="ImageWindow">
                            @*<img id="ImageWindow" class="zoom" src="~/Content/Images/ProductImages/@p." height="80" style=" display: block; margin-left: auto; margin-right: auto;" />*@
                        </span>
                    </div>
                    <section style="background-color:white;margin: -10px 0px 0px 0px;">
                        <p>@thing.ProductName </p>
                        <span style="margin-top:10px;"> £ @thing.ProductPrice</span>

                        <p class="" style="margin:0px 0px 0px 0px;">@thing.CategoryTBL.CategoryName </p>
                        @*@Html.Partial("_DetailsButton", p)*@
                    </section>

                    @*<div style="width:100%;height:auto;">

                        </div>*@


                </div>
            </div>

        }
    </section>

</div>

